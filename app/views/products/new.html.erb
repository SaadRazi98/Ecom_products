<h1>New Product site</h1>
<form method="post" action="/products">
  <div class= "mb-3">
    <label> Name </label>
    <input type="text" name="product[name]">
  </div>
  <div class= "mb-3">
    <label> Category </label>
    <input type="text" name="product[category]">
  </div>
  <div class= "mb-3">
    <label> Price </label>
    <input type="text" name="product[price]">
  </div>
  <div class= "mb-3">
    <label> Website URL </label>
    <input type="text" name="product[website_url]">
  </div>
  <div class= "mb-3">
    <label> Image of Product (URL) </label>
    <input type="text" name="product[image_url]">
  </div>
  <div class= "mb-3">
    <input type="submit" value="Create" class="btn btn-outline-dark rounded-pill">
  </div>
</form>